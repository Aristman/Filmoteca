<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_dim"
    android:background="?selectableItemBackground"
    app:cardCornerRadius="@dimen/card_conner_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/default_dim"
            android:layout_weight="3"
            android:lines="1"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            tools:text="Имя контакта" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/phone_image"
            android:layout_height="@dimen/phone_image"
            android:tint="@color/design_default_color_primary"
            app:srcCompat="@drawable/ic_baseline_phone_24" />
    </LinearLayout>


</androidx.cardview.widget.CardView>