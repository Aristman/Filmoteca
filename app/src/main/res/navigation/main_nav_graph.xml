<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="ru.marslab.filmoteca.ui.login.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_welcomeScreenFragment"
            app:destination="@id/welcomeScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="ru.marslab.filmoteca.ui.about.AboutFragment"
        android:label="@string/about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/helpFragment"
        android:name="ru.marslab.filmoteca.ui.help.HelpFragment"
        android:label="@string/help"
        tools:layout="@layout/fragment_help" />
    <fragment
        android:id="@+id/mainMovieFragment"
        android:name="ru.marslab.filmoteca.ui.movie.MainMovieFragment"
        android:label="@string/films"
        tools:layout="@layout/fragment_main_movie" />
    <fragment
        android:id="@+id/mainTvFragment"
        android:name="ru.marslab.filmoteca.ui.tv.MainTvFragment"
        android:label="@string/tv"
        tools:layout="@layout/fragment_main_tv" />
    <fragment
        android:id="@+id/peopleMainFragment"
        android:name="ru.marslab.filmoteca.ui.people.PeopleMainFragment"
        android:label="@string/people"
        tools:layout="@layout/fragment_people_main" />
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="ru.marslab.filmoteca.ui.movie.MovieDetailFragment"
        android:label="@string/movie_detail_fragment"
        tools:layout="@layout/fragment_movie_delail">
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/welcomeScreenFragment"
        android:name="ru.marslab.filmoteca.ui.welcome.WelcomeScreenFragment"
        android:label="@string/welcome_screen"
        tools:layout="@layout/fragment_welcome_screen" >
        <action
            android:id="@+id/action_welcomeScreenFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>

</navigation>